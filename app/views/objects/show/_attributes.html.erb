<section>
  <div class="relative">
    <div class="absolute inset-0 flex items-center" aria-hidden="true">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center">
      <span class="px-3 bg-white text-2xl font-medium text-gray-900"><%= title %></span>
    </div>
  </div>
  <% attributes.each do |a| %>
    <div class="md:p-3 py-3 my-3">
      <div class="block relative invisible -top-24" id="<%= method_anchor m %>"></div>
      <div class="flex flex-wrap">
        <div class="w-full md:w-10/12">
          <h4 class="lg:text-2xl text-lg text-gray-900 dark:text-gray-200 font-semibold">
            <a href="#<%= a.name %>"><%= a.name %></a>
          </h4>
        </div>
        <div class="flex md:justify-end w-full md:w-2/12 mt-3 md:mt-0 font-mono">
          <span class="px-2 h-6 inline-block text-sm rounded bg-gray-200 dark:bg-gray-700 algin-middle cursor-default" title="<%= a.access %>">
            <%= a.access.titleize %>
          </span>
        </div>
      </div>
      <% if a.description.empty? %>
        <div class="ruby-documentation py-1">
          No documentation available
        </div>
      <% else %>
        <div class="ruby-documentation py-1">
          <%= raw a.description %>
        </div>
      <% end %>
    </div>
  <% end %>
</section>
